<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap 5 CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
   
    .bg-green-600, .text-white {
      transition: all 0.3s;
    }
    .active {
      background-color: rgb(22,163,74);
      color: #ffffff;
    }
    .tab a span{
      color: #000000;
    }
   .navbar-nav li a{
     
    color: black;
    font-weight: 600;
   }
   
  </style>
</head>
<body>
  <!-- <div class="container mt-4 text-center">
    <h1>Welcome to Career Camp</h1>
</div> -->
<div class="bg-green-600 container-fluid p-2 ">
    <nav class=" navbar navbar-expand-lg shadow">
      <a class="navbar-brand" href="/">Career Camp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse d-flex justify-content-center align-items-center" id="navbarNav">
          <ul class="navbar-nav mx-auto">
              <li class="nav-item me-5">
                  <a class="nav-link" href="/">Home</a>
              </li>
              <li class="nav-item me-5">
                  <a class="nav-link" href="/signup">Sign Up</a>
              </li>
              <li class="nav-item ">
                  <a class="nav-link" href="/signin">Sign In</a>
              </li>
              <!-- <li class="nav-item">
                  <a class="nav-link" href="/dashboard">Dashboard</a>
              </li> -->
          </ul>
      </div>
  </nav>
 
</div>

  <div class="position-sticky top-0 bg-white d-flex justify-content-center align-items-center" style="height: 70px; z-index: 50;">
    <nav class="shadow rounded-pill px-4 py-2 d-flex gap-3 tab">
      <a href="/students/create" class="d-flex align-items-center px-4 py-2 rounded-pill text-decoration-none" onclick="changeBgColor(this)">
        <span>Create Student</span>
      </a>
      <a href="/students" class="d-flex align-items-center px-4 py-2 rounded-pill text-decoration-none" onclick="changeBgColor(this)">
        <span>Student List</span>
      </a>
      <a href="/batch/create" class="d-flex align-items-center px-4 py-2 rounded-pill text-decoration-none" onclick="changeBgColor(this)">
        <span>Create Batch</span>
      </a>
      <a href="/interviews/create" class="d-flex align-items-center px-4 py-2 rounded-pill text-decoration-none" onclick="changeBgColor(this)">
        <span>Create Interview</span>
      </a>
      <a href="/interviews" class="d-flex align-items-center px-4 py-2 rounded-pill text-decoration-none" onclick="changeBgColor(this)">
        <span>Interview List</span>
      </a>
    </nav>
  </div>


    <!-- Bootstrap 5 JavaScript and dependencies -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-beta3/js/bootstrap.min.js"></script>
  <script>
    function changeBgColor(element) {
      document.querySelectorAll('nav a').forEach(a => a.classList.remove('active'));
      element.classList.add('active');
    }
  </script>
</body>
</html>
